<div class="container bg-danger">
  <div class="jumbotron bg-warning ">
   
   
    <h1 class="display-6" style="text-align: center;">EAT-DA-BURGER!</h1>
    <p style="text-align: center;"> <img src="../assets/images/bacon-burger.png" height="100" width="100"></p>
    
    <h2>Burgers that are devoured!</h2>
    

    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      {{> burgers/burger-block devour=true}}
      {{/unless}}
      {{/each}}
    </ul>

    <h2>Burgers that are not devoured!</h2>

    <ul>
      {{#each burgers}}
      {{#if devoured}}
      {{> burgers/burger-block devour=false}}
      {{/if}}
      {{/each}}
    </ul>

    <h2>Add a Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
      </div>

      <div class="form-group">
        <label for="devoured">Devoured?</label><br>
        <input type="radio" name="devoured" value="1" checked> Not Devoured!<br>
        <input type="radio" name="devoured" value="0"> Devour it!
      </div>

      <button type="submit">Add Burger</button>
    </form>
  </div>
</div>