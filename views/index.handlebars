
<div class="jumbotron-fluid ">
  <div class="container-fluid" style="background-color:beige">
    <div class="row">
      <div class="col-md-12">
        <h1 class="m-25 p-30 text-center">EAT-DA-BURGER!</h1>
        <p class="text-center"> <img src="../assets/images/bacon-burger.png" height="100" width="100"></p>
      </div>
    </div>

    <div class="row">
      <div class="mx-auto">
        <h3 class="text-center mb-2">Add a Burger</h3>
        <form class="create-form">
          <div class="form-group ">
            <label for="ca" class="mt-2">Burger Name:</label>
            <input type="text" id="ca" name="name">
          </div>
          <div class="form-group text-center">
        
            <input type="radio" name="devoured" value="1" checked> Not Devoured!
            <input type="radio" name="devoured" value="0"> Devour it!
          </div>
          <div class="row">
            <div class="mx-auto">
              <div class="col-md-12 p-1">
                <button type="submit" class="text-center m-2 pl-2 btn btn-success" >Add Burger</button>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
    <div class="row ">
      <div class="col-md-2"></div>
      <div class="col-md-4 p-4">
        <h4>Burgers that are devoured!</h4>
        <ul>
          {{#each burgers}}
          {{#unless devoured}}
          {{> burgers/burger-block devour=true}}
          {{/unless}}
          {{/each}}
        </ul>
      </div>
      <div class="col-md-4 p-4">
        <h4>Burgers that are not devoured!</h4>
        <ul>
          {{#each burgers}}
          {{#if devoured}}
          {{> burgers/burger-block devour=false}}
          {{/if}}
          {{/each}}
        </ul>
      </div>
      <div class="col-md-2"></div>
    </div>
  </div>
</div>